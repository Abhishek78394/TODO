<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
  <div class="container-fluid pt-5 w-100 alert alert-success">
    <form action="/save" method="post" class="w-50 m-auto">
      <h2 class="text-center mb-3">Enter Task</h2>
      <input class="form-control w-75 m-auto mb-3" type="text" name="title" placeholder="Enter Title">
      <textarea class="form-control m-auto w-75 mb-2" name="description" id=""
        placeholder="enter description here....."></textarea>
      <h1 class=" text-center w-100"><button class="btn btn-info"> Add Task</button></h1>
    </form>
    <div class="bottom mt-5 w-50 alert alert-imfo m-auto">
      <% tasks.forEach(function(task) { %>
        <div class="alert alert-dark mt-1">

          <div>
            <h2>
              <%= task.title %>
            </h2>
          </div>
          <small>
            <%= task.createdAt.toLocaleDateString() %>-
              <%= task.createdAt.toLocaleTimeString() %>

          </small>
          <p>
            <%= task.description.substr(0,15) %>

          </p>
          <a href="/more/<%= task.id%>" class="btn btn-sm btn-dark">Read More </a>

        </div>
        <% })%>
    </div>
  </div>



</body>

</html>